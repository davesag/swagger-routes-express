{
  "name": "swagger-routes-express",
  "version": "1.1.0",
  "description": "Connect your Express route controllers to restful paths using your Swagger definition file",
  "main": "src/index.js",
  "engines": {
    "node": "10.9.0",
    "npm": "6.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davesag/swagger-routes-express.git"
  },
  "author": "Dave Sag <davesag@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davesag/swagger-routes-express/issues"
  },
  "homepage": "https://github.com/davesag/swagger-routes-express#readme",
  "scripts": {
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "prettier": "prettier --single-quote --no-semi --write '**/*.{js,json}'",
    "test": "find ./test/unit -name '*spec.js' | NODE_ENV=test xargs mocha --require ./test/unit/test_helper.js",
    "test:coverage": "find ./test/unit -name '*spec.js' | NODE_ENV=test xargs nyc mocha --require ./test/unit/test_helper.js"
  },
  "keywords": [
    "express",
    "swagger",
    "routes"
  ],
  "lint-staged": {
    "**/*.{js,json}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "index.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  },
  "devDependencies": {
    "ajv": "^6.5.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.0.0",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "prettier": "^1.14.2",
    "proxyquire": "^2.1.0",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.1.0"
  }
}
